{
    "name": "vacation-stats-dashboard-frontend",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.11.56",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@types/recharts": "^1.8.29",
        "axios": "^1.4.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.12.0",
        "react-router-dom": "^6.11.1",
        "react-scripts": "5.0.1",
        "recharts": "^3.1.2",
        "typescript": "^4.7.4",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.5.2",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "ts-jest": "^29.1.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test:coverage": "react-scripts test --coverage --watchAll=false",
        "test:enhanced": "npm run test:backend && npm run test:frontend",
        "test:backend": "cd ../backend && python -m pytest test_api_enhanced.py -v --tb=short --color=yes",
        "test:frontend": "react-scripts test --watchAll=false --passWithNoTests",
        "test:frontend:coverage": "react-scripts test --coverage --watchAll=false --passWithNoTests",
        "test:unit": "react-scripts test --watchAll=false --testPathPattern=all-tests\\.test\\.tsx$",
        "test:integration": "react-scripts test --watchAll=false --testPathPattern=all-tests\\.test\\.tsx$",
        "test:watch": "react-scripts test --watch",
        "eject": "react-scripts eject",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/**/*.d.ts",
            "!src/index.tsx",
            "!src/setupTests.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "moduleNameMapper": {
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(axios)/)"
        ]
    }
}
